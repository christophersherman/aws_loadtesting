{
  "title": "Live Load Test Dashboard",
  "tags": ["load-test", "performance"],
  "timezone": "browser",
  "editable": true,
  "refresh": "5s",
  "panels": [
    {
      "type": "text",
      "title": "header",
      "gridPos": {"x":0,"y":0,"w":24,"h":2},
      "content": "# ðŸš€ API Performance Metrics\n**Current Test Phase:** ${phases}",
      "transparent": true
    },
    {
      "type": "row",
      "title": "Core Metrics",
      "gridPos": {"x":0,"y":1,"w":24,"h":1},
      "collapsed": false
    },
    {
      "type": "stat",
      "title": "Success Rate (%)",
      "gridPos": {"x":0,"y":2,"w":3,"h":4},
      "targets": [{
        "expr": "sum(vegeta_status_codes{code=~'2..'}) / sum(vegeta_status_codes) * 100",
        "format": "time_series"
      }],
      "max": 100,
      "thresholds": {
        "mode": "absolute",
        "steps": [
          {"value": 99.9, "color": "green"},
          {"value": 99, "color": "yellow"},
          {"value": 95, "color": "red"}
        ]
      },
      "interval": "1m"
    },
    {
      "type": "stat",
      "title": "Error Rate (/s)",
      "gridPos": {"x":3,"y":2,"w":3,"h":4},
      "targets": [{
        "expr": "sum(rate(vegeta_status_codes{code!~'2..'}[1m]))",
        "format": "time_series"
      }],
      "colorMode": "value",
      "graphMode": "area"
    },
    {
      "type": "graph",
      "title": "Request Rate (/s)",
      "gridPos": {"x":6,"y":2,"w":6,"h":8},
      "targets": [{
        "expr": "rate(vegeta_requests_total[1m])",
        "legendFormat": "Request Rate"
      }],
      "steppedLine": false,
      "fill": 1
    },
    {
      "type": "graph",
      "title": "RPS (Requests Per Second)",
      "gridPos": {"x":12,"y":2,"w":6,"h":8},
      "targets": [{
        "expr": "vegeta_rps",
        "legendFormat": "RPS"
      }],
      "steppedLine": false,
      "fill": 1
    },
    {
      "type": "row",
      "title": "System Metrics",
      "gridPos": {"x":0,"y":10,"w":24,"h":1},
      "collapsed": false
    },
    {
      "type": "graph",
      "title": "CPU Usage (%)",
      "gridPos": {"x":0,"y":11,"w":12,"h":8},
      "targets": [{
        "expr": "100 - (avg by (instance) (irate(node_cpu_seconds_total{mode='idle'}[1m])) * 100)",
        "legendFormat": "CPU Usage"
      }],
      "yAxis": {"max": 100},
      "unit": "percent"
    },
    {
      "type": "graph",
      "title": "Memory Usage (%)",
      "gridPos": {"x":12,"y":11,"w":12,"h":8},
      "targets": [{
        "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
        "legendFormat": "Memory Usage"
      }],
      "yAxis": {"max": 100},
      "unit": "percent"
    },
    {
      "type": "piechart",
      "title": "Status Code Distribution",
      "gridPos": {"x":0,"y":19,"w":12,"h":8},
      "targets": [{
        "expr": "sum(vegeta_status_codes) by (code)"
      }],
      "pieType": "donut"
    }
  ],
  "templating": {
    "list": [{
      "name": "phases",
      "query": "label_values(vegeta_current_phase, phase_name)",
      "refresh": 2,
      "type": "query"
    }]
  },
  "annotations": {
    "list": [{
      "name": "Test Phases",
      "datasource": "Prometheus",
      "expr": "vegeta_current_phase == 1",
      "title": "{{phase_name}}",
      "tags": ["phase"]
    }]
  },
  "schemaVersion": 36,
  "version": 1
}
